{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "vsicons.associations.files": [
    // { "icon": "angular",  "extensions": ["loading.tsx"], "filename": true, "format": "svg" }
  ],
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns":{
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    //"layout.tsx": "page.tsx", //TODO: evaluate
    "page.tsx": "loading.tsx, error.tsx, head.tsx, *.tsx",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "tailwind.config.js": "postcss.config.js",
    "Dockerfile": ".dockerignore",
    "next.config.js": ".env, .eslintrc.json, jest.config.js, next-env.d.ts, tailwind.config.js, tsconfig.json"
  },
  "files.exclude": {
    "node_modules/": true,
    ".next": true,
    ".swc": true
  }
}